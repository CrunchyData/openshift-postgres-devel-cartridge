#!/bin/bash 

source $OPENSHIFT_CARTRIDGE_SDK_BASH

client_result "installing pg devel "

#
# setup pgadmin3 
#
unzip -d $OPENSHIFT_PGDEVEL_DIR $OPENSHIFT_PGDEVEL_DIR/archives/pgadmin3-build.zip
echo $LD_LIBRARY_PATH:$OPENSHIFT_PGDEVEL_DIR/pgadmin3-build/lib > ~/.env/user_vars/LD_LIBRARY_PATH

echo $OPENSHIFT_PGDEVEL_DIR/pgadmin3-build/bin > env/OPENSHIFT_PGDEVEL_PATH_ELEMENT

client_result "completed install of pg devel"

